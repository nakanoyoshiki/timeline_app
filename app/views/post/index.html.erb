<% if @twitter.tweet.present? %>
    <table class="table table-bordered">
      <thead>
      <tr>
        <td>アイコン</td>
        <td>id</td>
        <td>tweet内容</td>
        <td>リツイート数</td>
      </tr>
      </thead>
      <tbody>
      <% @twitter.tweet.each do |tweet| %>
          <tr>
            <td><img src="<%= tweet[:icon] %>" alt="icon"></td>
            <td><%= tweet[:id] %></td>
            <td><%= tweet[:text] %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>